<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#43b3e6">

        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify you Account"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="175dp"/>
        <TextView
            android:id="@+id/isi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We have send verification code to your email"
            android:textAlignment="center"
            android:layout_below="@+id/judul"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"/>

        <EditText
            android:id="@+id/kodeverifikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:hint="enter verification code here..."
            android:textAlignment="center"
            android:textColorHint="#ffffff"
            android:paddingBottom="17dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/isi"
            android:layout_marginTop="60dp" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/kodeverifikasi"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="100dp"
            android:text="SEND"
            android:textStyle="bold"
            android:onClick="Home"
            android:textColor="#ffffff"
            android:background="@drawable/buttonrippleblue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_send"
            android:layout_marginTop="20dp"
            android:text="@string/code"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="15dp"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>